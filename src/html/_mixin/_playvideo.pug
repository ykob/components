mixin playVideo(tag)
  #{tag}.c-play-video(
    href = attributes.href,
    target = attributes.target,
    class = attributes.className,
    )
    svg.c-play-video__icon(
      width="30" height="30" viewBox="0 0 30 30"
      )
      path(d="M30 15L4 0v30")

mixin playVideoBorder(tag)
  #{tag}.c-play-video-border(
    href = attributes.href,
    target = attributes.target,
    class = attributes.className,
    )
    svg.c-play-video-border__icon(
      width="30" height="30" viewBox="0 0 30 30"
      )
      path(d="M30 15L4 0v30")
