mixin buttonBorder(tag)
  -
    var classList = {
      parent: '',
      label: '',
      lineV: '',
      lineH: ''
    };
    if (attributes.className) classList.parent += attributes.className;
    if (attributes.modifier) {
      if (classList.parent.length > 0) classList.parent += ' ';
      for (var i = 0; i < attributes.modifier.length; i++) {
        if (i > 0) {
          classList.parent += ' ';
          classList.label += ' ';
          classList.lineV += ' ';
          classList.lineH += ' ';
        }
        classList.parent += `c-button-border--${attributes.modifier[i]}`;
        classList.label += `c-button-border__label--${attributes.modifier[i]}`;
        classList.lineV += `c-button-border__line-v--${attributes.modifier[i]}`;
        classList.lineH += `c-button-border__line-h--${attributes.modifier[i]}`;
      }
    }
  #{tag}.c-button-border(
    href = attributes.href,
    target = attributes.target,
    type = attributes.type,
    class = classList.parent
    )
    span.c-button-border__wrap
      span.c-button-border__label(
        class = classList.label
        )
        block
    span.c-button-border__line-v(
      class = classList.lineV
      )
    span.c-button-border__line-h(
      class = classList.lineH
      )

